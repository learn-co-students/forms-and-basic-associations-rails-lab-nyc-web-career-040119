<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <p><%= f.label :title %>
  <%= f.text_field :title %></p>

  <p><%= f.label :artist_name %>
  <%= f.text_field :artist_name %></p>

  <p><%= f.label :genre_name %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name)
 %></p>

 <label for="song_notes_1"><%= f.label :song_notes_1 %>
 <%= f.text_field :note_contents %></label>

 <label for="song_notes_2"><%= f.label :song_notes_2 %>
 <%= f.text_field :note_contents %></label>

 <label for="song_notes_3"><%= f.label :song_notes_3 %>
 <%= f.text_field :note_contents %></label>

  <p><%= f.submit %></p>
<% end %>
