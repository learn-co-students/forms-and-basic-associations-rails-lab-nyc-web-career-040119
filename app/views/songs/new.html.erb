<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <!-- using artist_name method created in Song model -->
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre_id %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %><br>
  <br>
  <%= f.label :note_contents %><br>
  <!-- multiple: true allows for array items for :note_contents -->
  <%= f.text_field :note_contents, multiple: true, id: :song_notes_1 %><br>
  <%= f.text_field :note_contents, multiple: true, id: :song_notes_2 %><br>
  <%= f.text_field :note_contents, multiple: true, id: :song_notes_3 %><br>
  <br />

  <%= f.submit %>
<% end %>
